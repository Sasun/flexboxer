{
  "name": "flexboxer",
  "version": "1.1.0",
  "description": "Flexbox Layout Builder",
  "main": "index.js",
  "scripts": {
    "build": "eslint src && webpack",
    "start": "ENV=dev webpack-dev-server --devtool sourcemap --inline --hot --content-base src/",
    "test": "babel-node tests.js | faucet"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pete-otaqui/flexboxer.git"
  },
  "keywords": [
    "flexbox",
    "designer"
  ],
  "author": "Pete Otaqui <pete@otaqui.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pete-otaqui/flexboxer/issues"
  },
  "homepage": "https://github.com/pete-otaqui/flexboxer#readme",
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "plugins": ["react"],
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "templateStrings": true,
      "jsx": true,
      "modules": true,
      "spread": true
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "semi": ["error", "always"],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "enzyme": "^2.3.0",
    "eslint": "^2.13.1",
    "eslint-plugin-react": "^5.2.2",
    "extend-tape": "^1.2.0",
    "faucet": "0.0.1",
    "glob": "^7.0.3",
    "less": "^2.7.1",
    "react-addons-test-utils": "^15.1.0",
    "tape": "^4.5.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "less-loader": "^2.2.3",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "style-loader": "^0.13.1"
  }
}
