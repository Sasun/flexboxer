{
  "name": "flexboxer",
  "version": "1.1.0",
  "description": "Flexbox Layout Builder",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start": "ENV=dev webpack-dev-server --devtool sourcemap --inline --hot --content-base src/",
    "test": "eslint src *.js && BABEL_ENV=test nyc --reporter=lcov babel-node tests.js | faucet && nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pete-otaqui/flexboxer.git"
  },
  "keywords": [
    "flexbox",
    "designer"
  ],
  "author": "Pete Otaqui <pete@otaqui.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pete-otaqui/flexboxer/issues"
  },
  "homepage": "https://github.com/pete-otaqui/flexboxer#readme",
  "babel": {
    "presets": [
      "babel-preset-es2015",
      "babel-preset-react"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ],
        "sourceMaps": "inline"
      }
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/js/actions/**/*.js",
      "src/js/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "templateStrings": true,
      "jsx": true,
      "modules": true,
      "spread": true
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "enzyme": "^2.4.1",
    "eslint": "^2.13.1",
    "eslint-plugin-react": "^5.2.2",
    "extend-tape": "^1.2.0",
    "faucet": "0.0.1",
    "glob": "^7.0.5",
    "less": "^2.7.1",
    "nyc": "^7.1.0",
    "react-addons-test-utils": "^15.2.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "less-loader": "^2.2.3",
    "react": "^15.1.0",
    "react-dom": "^15.2.1",
    "react-frame-component": "^0.6.2",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "style-loader": "^0.13.1"
  }
}
