{
  "name": "flexboxer",
  "version": "0.5.0",
  "description": "Flexbox Layout Builder",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npm run bundle && npm run uglify && npm run html-dist && npm run styles",
    "bundle": "jspm bundle-sfx lib/main.jsx! dist/build.js",
    "uglify": "uglify -s dist/build.js -o dist/build.min.js",
    "html-dist": "html-dist src/index.html --remove-all --minify --insert build.min.js -o dist/index.html",
    "styles": "cp -R src/styles dist/",
    "serve": "serve src/",
    "serve-dist": "serve dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pete-otaqui/flexboxer.git"
  },
  "keywords": [
    "flexbox",
    "designer"
  ],
  "author": "Pete Otaqui <pete@otaqui.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pete-otaqui/flexboxer/issues"
  },
  "homepage": "https://github.com/pete-otaqui/flexboxer#readme",
  "jspm": {
    "directories": {
      "baseURL": "src"
    },
    "dependencies": {
      "es6-promise": "npm:es6-promise@^3.0.2",
      "events": "npm:events@^1.0.2",
      "jsx": "github:floatdrop/plugin-jsx@^1.1.0",
      "lodash": "npm:lodash@^3.10.1",
      "object-assign": "npm:object-assign@^4.0.1",
      "react": "npm:react@^0.14.0-beta3",
      "react-dom": "npm:react-dom@^0.14.0-beta3"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.22",
      "babel-runtime": "npm:babel-runtime@^5.8.20",
      "core-js": "npm:core-js@^1.1.0"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "templateStrings": true,
      "jsx": true,
      "modules": true,
      "spread": true
    },
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "devDependencies": {
    "babel-eslint": "^4.1.1",
    "babel-jest": "^5.3.0",
    "eslint": "^1.2.0",
    "jest-cli": "^0.5.0",
    "jspm": "^0.16.0",
    "react": "^0.13.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/jspm_packages/"
    ],
    "scriptPreprocessor": "./node_modules/babel-jest",
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "./node_modules/react",
      "./src/lib"
    ]
  },
  "dependencies": {}
}
